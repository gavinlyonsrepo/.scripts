#!/bin/sh

USER1=archie

if [[ $(whoami) != "root" ]]
    then echo "Run as root"
    exit 1
fi

echo "Warning! This will delete the cache folders for all users configured in this script! Do you wish to continue? [y/N]"
read input
if [ "$input" == "y" ]
then
    echo "Cleaning..."
    rm -r /root/.cache/*
    rm -r /home/${USER1}/.cache/*
    echo "Done!"
fi
